<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.RegisterEmployee"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_cardview"
            android:weightSum="9"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentStart="true"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:id="@+id/requestByTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="1.5"
                android:gravity="left"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingHorizontal="3dp"
                android:text="text"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/_10sdp" />

           <LinearLayout
               android:layout_height="wrap_content"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_gravity="center"
               android:paddingHorizontal="3dp"
               android:gravity="center"
               android:orientation="vertical">
               <TextView
                   android:visibility="visible"
                   android:id="@+id/headstv"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:layout_centerInParent="true"
                   android:gravity="center"
                   android:maxLines="2"
                   android:textAlignment="center"
                   android:ellipsize="end"
                   android:text="heads name test"
                   android:textStyle="bold"
                   android:textColor="@color/blue_text"
                   android:textSize="@dimen/_10sdp" />
               <TextView
                   android:layout_gravity="center"
                   android:id="@+id/requestForTV"
                   android:maxLines="2"
                   android:ellipsize="end"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_centerInParent="true"
                   android:gravity="center"
                   android:text="(mobile tettttttt)"
                   android:textColor="@color/blue_text"
                   android:textSize="@dimen/_10sdp" />
           </LinearLayout>

            <TextView
                android:id="@+id/amountTV"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingHorizontal="3dp"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/blue_text"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingHorizontal="3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statusTV"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="transfer"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/blue_text"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="15dp"
                    android:id="@+id/statusimg"
                    android:layout_height="15dp"
                    android:visibility="gone"
                    android:src="@drawable/alert"/>
            </LinearLayout>

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:gravity="left"
                android:paddingLeft="3dp"
                android:layout_height="wrap_content"
                android:text="10/01/2023"
                android:textSize="@dimen/_10sdp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/blue_text"
                android:layout_alignParentEnd="true" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>