<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.RegisterEmployee"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Register Employee"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/_20sdp"/>

        <View
            android:layout_width="@dimen/_250sdp"
            android:layout_height="2dp"
            android:background="@color/dark_blue"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/employeeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_rectangle"
                android:hint="Employee Name"
                android:textColor="@color/blue_text"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:inputType="text"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray5"/>

            <EditText
                android:id="@+id/mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_rectangle"
                android:hint="Mobile Number"
                android:textColor="@color/blue_text"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:inputType="number"
                android:maxLength="10"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray5"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_rectangle"
                android:hint="E-mail"
                android:textColor="@color/blue_text"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:inputType="textEmailAddress"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray5"/>

            <EditText
                android:id="@+id/accNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_rectangle"
                android:hint="Account Number"
                android:textColor="@color/blue_text"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:inputType="number"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray5"/>



            <EditText
                android:id="@+id/ifscCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_rectangle"
                android:hint="IFSC Code"
                android:textColor="@color/blue_text"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:inputType="text"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray5"/>

            <EditText
                android:id="@+id/upiCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_rectangle"
                android:hint="UPI Code"
                android:textColor="@color/blue_text"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:inputType="text"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray5"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/corner_cardview"
            android:backgroundTint="@color/mint_green"
            android:gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>