<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.000009dp"
        android:background="@color/black"></TextView>

    <!-- EditText and Apply Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:gravity="center"
        android:background="@drawable/white_btn_border"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="200"
            android:layout_height="@dimen/_40sdp"
            android:hint="User Name"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:maxLength="200"
            android:layout_height="@dimen/_40sdp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="200"
            android:layout_height="@dimen/_40sdp"
            android:hint="Phone Number"/>

        <EditText
            android:id="@+id/accountNo"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="200"
            android:layout_height="@dimen/_40sdp"
            android:hint="Account Number"/>
        <EditText
            android:id="@+id/khaltiId"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="200"
            android:layout_height="@dimen/_40sdp"
            android:hint="Khalti Id"/>

        <EditText
            android:id="@+id/userRole"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:layout_height="@dimen/_40sdp"
            android:hint="User Role eg:1,2,..."/>

        <EditText
            android:id="@+id/superUser"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/edit_text_border"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:layout_height="@dimen/_40sdp"
            android:hint="Super User eg:0,1,2"/>




    </LinearLayout>

    <TextView
        android:id="@+id/submit_user_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/btn_green_bg"
        android:gravity="center"
        android:text="SUBMIT"
        android:layout_marginBottom="@dimen/_80sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"></TextView>

</LinearLayout>
